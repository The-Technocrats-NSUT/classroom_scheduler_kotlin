<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <TextView
        android:id="@+id/noticeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        tools:text="@string/loren_ipsum_text"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/noticeAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "by Aman Kumar"
        app:layout_constraintTop_toBottomOf="@id/noticeText"
        app:layout_constraintLeft_toRightOf="@id/noticeTime"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="10dp"
        />
    <TextView
        android:id="@+id/noticeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noticeText"
        app:layout_constraintRight_toLeftOf="@id/noticeTime"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text = "23-05-2021"
        android:paddingHorizontal="10dp"
        />
    <TextView
        android:id="@+id/noticeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "23:43"
        app:layout_constraintLeft_toRightOf="@id/noticeDate"
        app:layout_constraintTop_toBottomOf="@id/noticeText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="10dp"
        />

    <ImageView
        android:id="@+id/deleteNoticeBtn"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/noticeText"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/delete_notice_btn"

        android:layout_width="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>