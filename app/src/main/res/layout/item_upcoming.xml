<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/upcomingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text = "OS Extra Class"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/deleteUpcomingItem"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/upcomingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/upcomingDate"
        app:layout_constraintTop_toBottomOf="@id/upcomingText"
        android:layout_marginStart="30dp"
        tools:text="23:21" />

    <TextView
        android:id="@+id/upcomingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upcomingText"
        tools:text="12-2-2021" />
    <ImageView
        android:id="@+id/deleteUpcomingItem"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:src="@drawable/delete_notice_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/upcomingText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:foregroundGravity="center"
        android:contentDescription="@string/delete_notice_button" />
</androidx.constraintlayout.widget.ConstraintLayout>